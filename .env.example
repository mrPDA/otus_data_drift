# Yandex Cloud Configuration
export TF_VAR_cloud_id="your-cloud-id-here"
export TF_VAR_folder_id="your-folder-id-here"
export TF_VAR_zone="ru-central1-a"
export TF_VAR_service_account_key_file="path/to/your/service-account-key.json"
export TF_VAR_service_account_id="your-service-account-id"
export TF_VAR_network_id="your-network-id"

# SSH Configuration
export TF_VAR_public_key_path="path/to/your/public-key.pub"

# Cluster Configuration
export TF_VAR_cluster_name="spark-data-drift-cluster"

# Usage:
# 1. Copy this file: cp .env.example .env
# 2. Edit .env with your actual values
# 3. Source the file: source .env
# 4. Run terraform commands